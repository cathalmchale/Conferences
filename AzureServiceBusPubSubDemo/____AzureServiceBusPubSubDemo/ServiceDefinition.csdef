<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="AzureServiceBusPubSubDemo" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WorkerRole name="BackendPublisherWorker" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
      <Setting name="InputQueueName" />
      <Setting name="WebFrontendQueueName" />
      <Setting name="PublisherTopicName" />
    </ConfigurationSettings>
  </WorkerRole>
  <WorkerRole name="BackendSubscriberWorker" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
      <Setting name="PublisherTopicName" />
      <Setting name="WebFrontendQueueName" />
    </ConfigurationSettings>
  </WorkerRole>
  <WorkerRole name="AnotherBackendSubscriberWorker" vmsize="Small">
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
      <Setting name="PublisherTopicName" />
      <Setting name="WebFrontendQueueName" />
    </ConfigurationSettings>
  </WorkerRole>
  <WebRole name="WebFrontend" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="InputQueueName" />
      <Setting name="BackendPublisherWorkerQueueName" />
      <Setting name="Microsoft.ServiceBus.ConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
  </WebRole>
</ServiceDefinition>